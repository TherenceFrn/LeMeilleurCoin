{% extends "base.html.twig" %}

{% block title %}
    Mes Annonces
{% endblock %}

{% block stylesheets %}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
{% endblock %}


{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nom</th>
            <th scope="col">Description</th>
            <th scope="col">City</th>
            <th scope="col">Zip</th>
            <th scope="col">Price</th>
            <th scope="col">Date_Created</th>
            <th scope="col">Author_id</th>
            <th scope="col">Voir</th>
            <th scope="col">Supprimer</th>
        </tr>
        </thead>
        {% if mesannonces is defined %}

            <tbody>
            {% for annonce in mesannonces %}
                <tr>
                    <th scope="row">{{ annonce.id }}</th>
                    <th>{{ annonce.Title }}</th>
                    <th>{{ annonce.description }}</th>
                    <th>{{ annonce.city }}</th>
                    <th>{{ annonce.zip }}</th>
                    <th>{{ annonce.price }} â‚¬</th>
                    <th>{{ annonce.DateCreated.date }}</th>
                    <th>{{ annonce.AuthorId }}</th>


                    <th><a class="btn btn-success" href="{{ path('annonce_index', {'id': annonce.id}) }}">Voir</a></th>
                    <th><a class="btn btn-danger" href="{{ path('annonce_index', {'id': annonce.id}) }}">Editer</a></th>
                </tr>
            {% endfor %}
            </tbody>
        {% endif %}
    </table>

{% endblock %}
{% block javascripts %}
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
{% endblock %}

